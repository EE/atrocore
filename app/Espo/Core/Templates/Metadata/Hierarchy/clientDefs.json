{
  "controller": "controllers/record",
  "boolFilterList": [
    "onlyMy",
    "assignedToMe",
    "ownedByMe"
  ],
  "views": {
    "list": "views/list-tree",
    "detail": "views/detail-tree"
  },
  "recordViews": {
    "detail": "views/record/detail-tree"
  },
  "relationshipPanels": {
    "children": {
      "dragDrop": {
        "isActive": true,
        "sortField": "sortOrder"
      }
    }
  },
  "dynamicLogic": {
    "fields": {
      "sortOrder": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isRoot"
            }
          ]
        }
      }
    }
  }
}